<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BarcodeSearchFragment">

    <TextView
        android:id="@+id/barcode_search_top_bar"
        android:text="バーコード検索"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        />

    <ImageButton
        android:id="@+id/close_barcode_search_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:id="@+id/barcode_search_description_text_view"
        android:text="'978'から始まるバーコードを写して下さい。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/barcode_search_top_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        />

    <View
        android:id="@+id/manual_background_view"
        android:background=""
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/light_background_view"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        />

    <TextView
        android:id="@+id/manual_text_view"
        android:text="手動で入力"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/manual_background_view"
        app:layout_constraintRight_toRightOf="@+id/manual_background_view"
        app:layout_constraintBottom_toBottomOf="@+id/manual_background_view"
        android:layout_marginBottom="4dp"
        />

    <View
        android:id="@+id/light_background_view"
        android:background=""
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/manual_background_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:id="@+id/light_text_view"
        android:text="ライトをつける"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/light_background_view"
        app:layout_constraintRight_toRightOf="@+id/light_background_view"
        app:layout_constraintBottom_toBottomOf="@+id/light_background_view"
        android:layout_marginBottom="4dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>