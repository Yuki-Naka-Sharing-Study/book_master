<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/book_shelf_list_item_book_image_view"
        android:layout_width="80dp"
        android:layout_height="140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/book_shelf_list_item_book_title_text_view"
        android:text="本のタイトル名"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/book_shelf_list_item_book_image_view"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/book_shelf_list_item_book_author_text_view"
        android:text="本の著者名"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/book_shelf_list_item_book_title_text_view"
        app:layout_constraintLeft_toRightOf="@+id/book_shelf_list_item_book_image_view"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <ImageView
        android:id="@+id/navigate_to_each_book_info"
        android:src="@drawable/close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/book_shelf_list_item_book_image_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/book_shelf_list_item_book_image_view"
        android:layout_marginEnd="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>